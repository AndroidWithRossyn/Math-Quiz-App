<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/bganimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bganimation" />

    <RelativeLayout
        android:id="@+id/bganimation2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bganimation" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="92dp"
            android:background="@drawable/logo" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/buttonplay"
            android:fontFamily="@font/font"
          
            android:text="@string/play"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btn_options"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/buttonoptions"
            android:fontFamily="@font/font"
          
            android:text="@string/options"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/buttonexit"
            android:fontFamily="@font/font"
          
            android:text="@string/quit"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/img_more"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/moregames"
              
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/img_share"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/share"
              
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/img_rate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/rate"
              
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/img_politics"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/privacy"
              
                android:textColor="#ffffff" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>